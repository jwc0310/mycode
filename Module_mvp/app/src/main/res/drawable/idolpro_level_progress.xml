<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:id="@android:id/background"
        android:drawable="@color/idolproj_gray_f">
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="@color/idolproj_gray_f"
                    android:centerY="0.75"
                    android:endColor="@color/idolproj_gray_f"
                    android:startColor="@color/idolproj_gray_f" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="270"
                    android:endColor="@color/idolproj_yellow"
                    android:startColor="@color/idolproj_yellow" />
            </shape>
        </clip>
    </item>

</layer-list>
